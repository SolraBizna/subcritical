-- -*- lua -*-
append_cflags"-DTEN_MS_BUSYWAIT" -- Remove or comment out this line if the code it enables does more harm than good

-- if librt is present as a system library, link with it
local f = io.open("/usr/lib/librt.a", "r") or io.open("/lib/librt.a", "r")
if(f) then
   append_ldflags"-lrt"
   f:close()
end

targets = {timing={"timing.cc"}}
install={packages={"timing"}}
